<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_marginVertical="50dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/nepp_logo"
                android:layout_width="200dp"
                android:layout_height="100dp"></ImageView>

    </LinearLayout>

    <LinearLayout
        android:padding="10dp"
        android:paddingTop="20dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/id_icon"></ImageView>

        <EditText
        android:textSize="30dp"
        android:textColorHighlight="#ffffff"
        android:id="@+id/IDE1"
        android:layout_width="match_parent"


        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:hint="E-mail"
        android:textColorHint="#6AFFFFFF"
        android:inputType="textEmailAddress"
        ></EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_marginHorizontal="10dp"

        android:background="#6AFFFFFF"
        android:layout_width="match_parent"
        android:layout_height="2dp"></LinearLayout>

    <LinearLayout
        android:paddingTop="20dp"

        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/password_icon"></ImageView>

        <EditText
            android:textSize="30dp"
            android:textColorHighlight="#ffffff"
            android:id="@+id/PW2"
            android:layout_width="match_parent"


            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="Password"
            android:textColorHint="#6AFFFFFF"
            android:inputType="textEmailAddress"
            ></EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_marginHorizontal="10dp"
        android:background="#6AFFFFFF"
        android:layout_width="match_parent"
        android:layout_height="2dp"></LinearLayout>


    <Button
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="50dp"
        android:backgroundTint="#25FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="로그인"></Button>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <Button
                android:backgroundTint="#00ff0000"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="회원가입"></Button>
        <LinearLayout
            android:background="#6AFFFFFF"
            android:layout_width="1dp"
            android:layout_height="match_parent"></LinearLayout>
            <Button
                android:backgroundTint="#00ff0000"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="비밀번호 찾기"></Button>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></TextView>

    <LinearLayout
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginHorizontal="20dp"
            android:gravity="center"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:orientation="vertical">

            <ImageView
                android:layout_marginHorizontal="10dp"
                android:src="@drawable/kakao_login_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"></ImageView>
            <TextView
                android:gravity="center"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:text="카카오"
                android:textColor="#ffffff"></TextView>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:orientation="vertical">

            <ImageView
                android:layout_marginHorizontal="10dp"
                android:src="@drawable/naver_login_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"></ImageView>
            <TextView
                android:gravity="center"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:text="Naver"
                android:textColor="#ffffff"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginHorizontal="20dp"
            android:gravity="center"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:orientation="vertical">

            <ImageView
                android:layout_marginHorizontal="10dp"
                android:src="@drawable/google_login_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"></ImageView>
            <TextView
                android:gravity="center"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:text="구글"
                android:textColor="#ffffff"></TextView>
        </LinearLayout>
        <LinearLayout


            android:gravity="center"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:orientation="vertical">

            <ImageView
                android:layout_marginHorizontal="10dp"
                android:src="@drawable/apple_login_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"></ImageView>
            <TextView
                android:gravity="center"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:text="애플"
                android:textColor="#ffffff"></TextView>
        </LinearLayout>




    </LinearLayout>



</LinearLayout>